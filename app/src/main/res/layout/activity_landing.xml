                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/logo1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Quiz 1"
