<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="290dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="-4dp"
        android:src="@drawable/top_right_decoration" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="-45dp"
        android:src="@drawable/bottom_left_decoration" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="-3dp"
        android:src="@drawable/hill_forest_city" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/close_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/close_button" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/light_orange_circle"
                    android:scaleType="centerCrop" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="Store"
                android:textColor="@color/dark_green"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:text="Current Coins : "
                    android:textColor="@color/dark_green" />

                <TextView
                    android:id="@+id/current_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0"
                    android:text="34534534"
                    android:textColor="@color/dark_green"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/dark_coin" />
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2">

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"

                    android:background="@drawable/light_dark_green_rounded"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/exp_store_background">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="20dp"
                            android:background="@drawable/exp_booster" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="x2 Exp Booster"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="The x2 Exp Booster doubles your earned XP for a limited time, helping you level up faster and unlock new abilities quickly. "
                        android:textSize="10sp" />

                    <FrameLayout
                        android:id="@+id/buy_exp_booster"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/light_orange_rounded">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="20dp"
                            android:background="@drawable/coin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginHorizontal="10dp"
                            android:letterSpacing="0"
                            android:text="500"
                            android:textColor="@color/dark_green" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"

                    android:background="@drawable/light_dark_green_rounded"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/coin_booster_background">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="20dp"
                            android:background="@drawable/coin_booster" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="x2 Coin Booster"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="The x2 Coin Booster doubles the coins you earn, allowing you to accumulate wealth faster and unlock valuable items more quickly."
                        android:textSize="10sp" />

                    <FrameLayout
                        android:id="@+id/buy_coin_booster"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/light_orange_rounded">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="20dp"
                            android:background="@drawable/coin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginHorizontal="10dp"
                            android:letterSpacing="0"
                            android:text="1000"
                            android:textColor="@color/dark_green" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"

                    android:background="@drawable/light_dark_green_rounded"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shield_booster_background">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="20dp"
                            android:background="@drawable/shield_booster" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="x2 Loss Reducer"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="The x2 Exp Loss Reducer halves the XP you lose, helping you maintain your progress and level up more efficiently."
                        android:textSize="10sp" />

                    <FrameLayout
                        android:id="@+id/buy_shield_booster"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/light_orange_rounded">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="20dp"
                            android:background="@drawable/coin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginHorizontal="10dp"
                            android:letterSpacing="0"
                            android:text="1500"
                            android:textColor="@color/dark_green" />
                    </FrameLayout>
                </LinearLayout>

            </GridLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>
